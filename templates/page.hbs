import React, { useState, useEffect } from 'react';
import Layout from 'components/Layout';
import { useStoreState, useStoreActions } from 'easy-peasy';
import { Link } from '@reach/router';
import { Paper } from 'components/Paper';

const {{name}} = () => {
  const [touches, setTouches] = useState(0);
  const { data } = useStoreState(state => state.{{name}});
  const { getData } = useStoreActions(actions => actions.{{name}});

  useEffect(() => {
    getData();
  }, []);

  return (
    <Layout>
      <Paper>{data}</Paper>
      <Paper onClick={() => setTouches(touches + 1)}>{touches}</Paper>
      <Link to="/">Home</Link>
    </Layout>
  );
};

export default {{name}};
